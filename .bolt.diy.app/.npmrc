# Enable strict-peer-dependencies to ensure consistent dependencies
strict-peer-dependencies=false

# Use workspace protocol for better monorepo support
use-workspace-protocol=true

# Enable automatic installation of peer dependencies
auto-install-peers=true

# Configure store directory
store-dir=.pnpm-store

# Enable hoisting for better deduplication
hoist=true

# Use lockfile for consistent installs
lockfile=true

# Configure shell for scripts
shell-emulator=true

# Enable workspace feature
workspace-concurrency=4

# Use node-linker for better compatibility
node-linker=hoisted

# Configure save preferences
save-exact=true
save-prefix=''

# Security settings
verify-store-integrity=true